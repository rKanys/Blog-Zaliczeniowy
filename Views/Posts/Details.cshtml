@model Blog_Zaliczeniowy.Models.Post

<h2>@Model.Title</h2>
<p><strong>Autor:</strong> @Model.User.Nickname</p>
<p><strong>Data publikacji:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
<p>@Model.Content</p>

<hr />

<h3>Komentarze</h3>

<!-- Wyświetlanie istniejących komentarzy -->
@foreach (var comment in Model.Comments)
{
    <div class="comment">
        <p><strong>@comment.User.Nickname</strong> napisał:</p>
        <p>@comment.Content</p>
        <p><small>Opublikowano: @comment.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</small></p>
    </div>
}

<!-- Formularz do dodawania nowego komentarza -->
<h4>Zostaw komentarz:</h4>
<form asp-action="AddComment" asp-route-postId="@Model.Id" method="post">
    <div class="form-group">
        <textarea name="commentContent" rows="4" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Wyślij</button>
</form>